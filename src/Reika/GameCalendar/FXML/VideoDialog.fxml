<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<VBox alignment="CENTER" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <TitledPane animated="false" collapsible="false" text="Encoder">
         <content>
            <VBox alignment="CENTER_LEFT">
               <children>
                  <RadioButton fx:id="jcodec" mnemonicParsing="false" text="JCodec (Built-in, but slow export and poor color accuracy)">
                     <VBox.margin>
                        <Insets bottom="3.0" top="6.0" />
                     </VBox.margin>
                  </RadioButton>
                  <HBox alignment="CENTER">
                     <children>
                        <RadioButton fx:id="ffmpeg" mnemonicParsing="false" text="FFMPEG (Fast, accurate, requires independent install)">
                           <HBox.margin>
                              <Insets right="9.0" />
                           </HBox.margin>
                        </RadioButton>
                        <TextField fx:id="mpegPath" prefWidth="500.0" text="Path to FFMPEG executable" />
                     </children>
                     <padding>
                        <Insets bottom="3.0" top="3.0" />
                     </padding>
                  </HBox>
               </children>
            </VBox>
         </content>
      </TitledPane>
      <Separator prefWidth="200.0" />
      <TitledPane animated="false" collapsible="false" text="Playback Options">
         <content>
            <VBox alignment="CENTER_LEFT">
               <children>
                  <VBox>
                     <children>
                        <CheckBox fx:id="pauseNew" mnemonicParsing="false" text="Pause timelapse on new event/period">
                           <VBox.margin>
                              <Insets bottom="3.0" top="3.0" />
                           </VBox.margin>
                        </CheckBox>
                        <HBox>
                           <children>
                              <Label text="Pause duration (seconds):">
                                 <padding>
                                    <Insets bottom="3.0" top="3.0" />
                                 </padding>
                              </Label>
                              <Label fx:id="pauseLenText" text="&lt;Time&gt;">
                                 <padding>
                                    <Insets bottom="3.0" top="3.0" />
                                 </padding>
                                 <HBox.margin>
                                    <Insets left="5.0" />
                                 </HBox.margin>
                              </Label>
                           </children>
                        </HBox>
                        <Slider fx:id="pauseSlider" blockIncrement="1.0" majorTickUnit="1.0" max="10.0" showTickMarks="true" snapToTicks="true">
                           <padding>
                              <Insets bottom="3.0" top="3.0" />
                           </padding>
                        </Slider>
                     </children>
                  </VBox>
                  <VBox>
                     <children>
                        <HBox>
                           <children>
                              <Label text="Days Per Frame:">
                                 <padding>
                                    <Insets bottom="3.0" top="3.0" />
                                 </padding>
                              </Label>
                              <Label fx:id="speedText" text="&lt;Days&gt;">
                                 <padding>
                                    <Insets bottom="3.0" top="3.0" />
                                 </padding>
                                 <HBox.margin>
                                    <Insets left="5.0" />
                                 </HBox.margin>
                              </Label>
                           </children>
                        </HBox>
                        <Slider fx:id="speedSlider" blockIncrement="30.0" majorTickUnit="30.0" max="31.0" min="1.0" minorTickCount="29" showTickLabels="true" showTickMarks="true">
                           <padding>
                              <Insets bottom="3.0" top="3.0" />
                           </padding>
                        </Slider>
                     </children>
                     <VBox.margin>
                        <Insets top="20.0" />
                     </VBox.margin>
                  </VBox>
               </children>
            </VBox>
         </content>
      </TitledPane>
      <Separator prefWidth="200.0" />
      <Button fx:id="goButton" alignment="CENTER" mnemonicParsing="false" text="Generate Video">
         <VBox.margin>
            <Insets bottom="5.0" top="2.0" />
         </VBox.margin>
      </Button>
   </children>
</VBox>
